<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Billing"
    android:background="@color/White"
    android:orientation="vertical"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <TableRow

        android:id="@+id/firstRow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"

        >

        <LinearLayout

            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/boid"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/round"
                android:paddingTop="35dp"
                android:scaleType="centerCrop"
                android:text="1004"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/cusname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DURAIVEL"
                    android:textColor="@color/Black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cusnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9994314045"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>
    </TableRow>
        <TableRow>
            <ImageView
                android:layout_height="1.4dp"
                android:layout_width="wrap_content"
                android:src="@drawable/line_div"
                android:scaleType="center"
                />

        </TableRow>
    </TableLayout>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_height="10dp"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:layout_weight="1"

                android:layout_marginLeft="20dp"
                android:text="PICKUP"
                android:textColor="@color/DarkGray"

                />

            <TextView
                android:id="@+id/frm"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="K.K Nagar Main Road,Tiruchirappalli"
                android:textSize="13dp"
                android:textAllCaps="true"

                />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:text="DROP"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkGray"
                />

            <TextView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:id="@+id/to"
                android:text="Thillai Nagar 9th Cross,Tiruchirappalli"
                android:textSize="13dp"
                android:textAllCaps="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"

            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:text="DRIVER"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkGray"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dname"
                android:text="Duraivel P"
                android:textSize="13dp"
                android:textAllCaps="true"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:text="STARTING KM"
                android:layout_weight="1"
                android:gravity="left"
                android:textAllCaps="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkGray"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/km"
                android:text="5600 KM"
                android:textAllCaps="true"
                android:textSize="13dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:textAllCaps="true"
                android:text="ENDING KM"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkGray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ekm"
                android:text="5800 KM"
                android:textAllCaps="true"
                android:textSize="13dp" />
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:text="DISTANCE"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkGray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dis"
                android:text="300 KM"
                android:textSize="13dp" />
        </TableRow>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"

            >
            <Button
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:id="@+id/ed"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/l2"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:text="EDIT"
                android:background="@drawable/edit"
                android:textColor="@color/MidnightBlue"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:id="@+id/stt"
                android:layout_below="@+id/l2"
                android:layout_centerHorizontal="true"
                android:text="Start RIDE"
                android:background="@drawable/book"
                android:layout_marginTop="10dp"
                android:textColor="@color/White"
                />

        </LinearLayout>
    </TableLayout>

</android.support.v4.widget.NestedScrollView>

</LinearLayout>