<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/desc1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1004"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:background="@drawable/round"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11.5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.2dp"
                android:text="Customer"
                android:textColor="@color/Gray"
                android:textSize="12dp" />

            <TextView


                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.2dp"
                android:text="Bilal Mohamed "
                android:textColor="@color/Black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9994314045"
                android:textColor="@color/Black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
android:paddingRight="13dp"
           >

            <TextView
                android:id="@+id/cst"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.3dp"
                android:layout_marginLeft="10dp"
                android:text="From:K.K Nagar,Chennai,Tiruchirappalli"
               android:textStyle="bold"
                android:textColor="@color/Black"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/amount"
                android:layout_width="180sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="To:Karumandabam, Tiruchirappalli "
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:textSize="12dp" />

            <Button
                android:id="@+id/book"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:background="@color/MidnightBlue"
                android:text="Book Now"
                android:textColor="@color/White"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
